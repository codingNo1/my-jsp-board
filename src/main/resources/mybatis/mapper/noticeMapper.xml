<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.library.notice.repository.NoticeRepository">
	 <insert id="save" parameterType="com.library.notice.model.Notice">
		    INSERT INTO notice (title, content, reg_date)
        VALUES (#{title}, #{content}, NOW())
	 </insert>
 		
	<select id="findAll" resultType="com.library.notice.model.Notice">
        SELECT * FROM notice ORDER BY id DESC
    </select>

    <select id="findById" resultType="com.library.notice.model.Notice" parameterType="long">
        SELECT * FROM notice WHERE id = #{id}
    </select> 
 
 </mapper>